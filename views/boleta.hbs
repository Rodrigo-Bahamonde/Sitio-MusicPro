{{> head}}
{{> header}}
<!--Body-->
<div class="container px-5 my-5">
    <div class="container-bg py-2 rounded-5">
        <div class="d-flex ">
            <div id="comprobante" class="row">
                <div class="d-flex justify-content-center my-4">
                    <h1>Comprobante</h1>
                </div>
                <div class="justify-content-center">
                    <div class="row py-2 mx-5 align-items-center justify-content-between border-bottom">
                        <div class="col-6 justify-content-start d-flex">
                            <p class="m-0">Orden de Compra:</p>
                        </div>
                        <div class="col-6 justify-content-end d-flex">
                            <p class="m-0">{{data.ordenCompra}}</p>
                        </div>
                    </div>
                </div>
                <div class="justify-content-center">
                    <div class="row py-2 mx-5 align-items-center justify-content-between border-bottom">
                        <div class="col-6 justify-content-start d-flex">
                            <p class="m-0">MÃ©todo de Pago:</p>
                        </div>
                        <div class="col-6 justify-content-end d-flex">
                            <p class="m-0">{{data.metodoPago}}</p>
                        </div>
                    </div>
                </div>
                <div class="justify-content-center">
                    <div class="row py-2 mx-5 align-items-center justify-content-between border-bottom">
                        <div class="col-6 justify-content-start d-flex">
                            <p class="m-0">Fecha:</p>
                        </div>
                        <div class="col-6 justify-content-end d-flex">
                            <p class="m-0">{{data.fecha}}</p>
                        </div>
                    </div>
                </div>
                <div class="justify-content-center">
                    <div class="row py-2 mx-5 align-items-center justify-content-between border-bottom">
                        <div class="col-6 justify-content-start d-flex">
                            <p class="m-0">Total:</p>
                        </div>
                        <div class="col-6 justify-content-end d-flex">
                            <p class="m-0">{{data.total}}</p>
                        </div>
                    </div>
                </div>
                <div class="justify-content-center">
                    <div class="row py-2 mx-5 align-items-center justify-content-between border-bottom">
                        <div class="col-6 justify-content-start d-flex">
                            <p class="m-0">Rut:</p>
                        </div>
                        <div class="col-6 justify-content-end d-flex">
                            <p class="m-0">{{data.rut}}</p>
                        </div>
                    </div>
                </div>
                <div class="justify-content-center">
                    <div class="row py-2 mx-5 align-items-center justify-content-between border-bottom">
                        <div class="col-6 justify-content-start d-flex">
                            <p class="m-0">Nombre:</p>
                        </div>
                        <div class="col-6 justify-content-end d-flex">
                            <p class="m-0">{{data.nombre}} {{data.apellido}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 pt-5">
            <div class="d-flex justify-content-center">
                <button class="btn btn-secondary btn-lg px-4 w-25">Seguir comprando</button>
            </div>
        </div>
        <div class="col-12 py-4">
            <div class="d-flex justify-content-center">
                <button class="btn btn-lg" onclick="descargarComprobante()">
                    <div class="d-flex align-items-center justify-content-center">
                        <img height="auto" width="5%" src="/img/descargar-comprobante.png" />
                        <p class="ms-2 mb-1">Descargar comprobante</p>
                    </div>
                </button>
            </div>
        </div>
    </div>

</div>
{{> footer}}